{
  "name": "arx-mesh-editor",
  "version": "0.0.1",
  "description": "An editor for the level files of Arx Fatalis",
  "main": "src/main/index.js",
  "scripts": {
    "dev": "electron-webpack dev",
    "build": "electron-webpack && electron-builder",
    "commit": "git-cz",
    "commit:again": "git-cz --retry",
    "lint:js": "eslint \"src/**/*.[tj]s\"",
    "lint:css": "stylelint \"src/**/*.scss\"",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css:fix": "npm run lint:style -- --fix",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.[tj]s": [
      "eslint --fix"
    ],
    "src/**/*.scss": [
      "stylelint --fix"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "author": "Lajos Meszaros <m_lajos@hotmail.com>",
  "contributors": [
    "Frederik Gelder"
  ],
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meszaros-lajos-gyorgy/arx-mesh-editor.git"
  },
  "bugs": {
    "url": "https://github.com/meszaros-lajos-gyorgy/arx-mesh-editor/issues"
  },
  "homepage": "https://github.com/meszaros-lajos-gyorgy/arx-mesh-editor#readme",
  "dependencies": {
    "ramda": "^0.26.1",
    "source-map-support": "^0.5.16",
    "three": "^0.112.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "electron": "^7.1.10",
    "electron-builder": "^22.3.2",
    "electron-webpack": "^2.7.4",
    "electron-webpack-eslint": "^5.0.1",
    "electron-webpack-ts": "^3.2.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-prettier-standard": "^3.0.1",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-standard": "^4.0.1",
    "lint-staged": "^10.0.4",
    "node-sass": "^4.13.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.19.1",
    "prettier-config-standard": "^1.0.1",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.0.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-scss": "^3.14.2",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
