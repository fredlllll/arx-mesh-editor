{
  "name": "arx-mesh-editor",
  "version": "0.0.1",
  "description": "An editor for the level files of Arx Fatalis",
  "main": "src/loader.js",
  "scripts": {
    "commit": "git-cz",
    "commit:again": "git-cz --retry",
    "lint:js": "eslint \"src/**/*.+(js|ts)\"",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint-staged": "lint-staged",
    "loader": "ts-node ./src/loader.ts ./data/level11.DLF",
    "loader:watch": "nodemon -e ts -w ./src -x npm run loader"
  },
  "lint-staged": {
    "src/**/*.+(js|ts)": [
      "eslint --fix"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "author": "Lajos Meszaros <m_lajos@hotmail.com>",
  "contributors": [
    "Frederik Gelder"
  ],
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meszaros-lajos-gyorgy/arx-mesh-editor.git"
  },
  "bugs": {
    "url": "https://github.com/meszaros-lajos-gyorgy/arx-mesh-editor/issues"
  },
  "homepage": "https://github.com/meszaros-lajos-gyorgy/arx-mesh-editor#readme",
  "dependencies": {
    "implode-decoder": "^1.0.1",
    "ramda": "^0.27.0",
    "three": "^0.115.0"
  },
  "devDependencies": {
    "@types/node": "^13.13.4",
    "@types/ramda": "^0.27.4",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-prettier-standard": "^3.0.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-standard": "^4.0.1",
    "lint-staged": "^10.1.7",
    "nodemon": "^2.0.3",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.5",
    "prettier-config-standard": "^1.0.1",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
